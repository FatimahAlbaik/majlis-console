# Majlis Console Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Majlis Console
NEXT_PUBLIC_APP_DESCRIPTION=Accenture Academy Cohort 6 Internal Portal

# Timezone Configuration
NEXT_PUBLIC_TIMEZONE=Asia/Riyadh
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Authentication Configuration
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# Storage Configuration
NEXT_PUBLIC_STORAGE_BUCKET=media
NEXT_PUBLIC_MAX_IMAGE_SIZE=3145728
NEXT_PUBLIC_MAX_VIDEO_SIZE=20971520
NEXT_PUBLIC_MAX_PDF_SIZE=10485760

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_HIJRI_DATES=true

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Development Configuration
NODE_ENV=development
PORT=3000

# Production Configuration
# NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
# NODE_ENV=production